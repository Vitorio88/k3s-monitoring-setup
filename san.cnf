[req]
default_bits = 2048
prompt = no
default_md = sha256
req_extensions = req_ext
distinguished_name = dn

[dn]
CN = monitoring.local

[req_ext]
subjectAltName = @alt_names

[alt_names]
DNS.1 = prometheus.monitoring.local
DNS.2 = grafana.monitoring.local
IP.1 = 172.17.1.230   # master1
IP.2 = 172.17.1.231   # worker1
IP.3 = 172.17.1.232   # worker2
IP.4 = 172.17.1.233   # worker3
IP.5 = 172.17.1.234   # master2
IP.6 = 172.17.1.235   # master3
